@model CharacterSheetDnD.ViewModels.CharacterCreationViewModel

@{
    ViewData["Title"] = "Character Creation";
}

<head>
    <link rel="stylesheet" href="~/css/character-creation.css" asp-append-version="true" />
</head>

<div class="text-center">
    <h1 class="display-4">Character Creation</h1>
    <p>Complete all the fields and hit the "Create your Character" to start an adventure!</p>
  
    <form asp-action="SaveCharacter" asp-controller="CharacterCreation" method="post" class="p-3">
       
        <!-- Form Grid -->
        <div class="row g-3 align-items-center mb-3">
            <!-- CHARACTER NAME -->
            <div class="col-md-6">
                <label asp-for="Name" class="form-label">Character name: </label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <!-- RACE -->
            <div class="col-md-6">
                <label asp-for="Race" class="form-label">Race: </label>
                <input asp-for="Race" class="form-control" />
                <span asp-validation-for="Race" class="text-danger"></span>
            </div>

            <!-- CLASS -->
            <div class="col-md-6">
                <label asp-for="Class" class="form-label">Class: </label>
                <select asp-for="Class" asp-items="Model.AvailableClasses" class="form-control"></select>
                <span asp-validation-for="Class" class="text-danger"></span>
            </div>


            <!-- LEVEL -->
            <div class="col-md-6">
                <label asp-for="Level" class="form-label">Level: </label>
                <input type="number" asp-for="Level" class="form-control" min="1" max="20" />
                <span asp-validation-for="Level" class="text-danger"></span>
            </div>

        </div>

        <!-- Maximum Hit Point -->
        <div class="row">
            <label asp-for="MaximumHitPoints" class="form-label">Maximum Hit Points</label>
            <input asp-for="MaximumHitPoints" class="form-control centered-input" />
            <span asp-validation-for="MaximumHitPoints" class="text-danger"></span>
        </div>

        <!-- Statistic Fields -->
        <div class="row">
            <div class="col-md-4">
                <label asp-for="Strength" class="form-label">Strength</label>
                <input asp-for="Strength" class="form-control mb-3 centered-input" type="number" />
                <span asp-validation-for="Strength" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Dexterity" class="form-label">Dexterity</label>
                <input asp-for="Dexterity" class="form-control mb-3 centered-input" type="number" />
                <span asp-validation-for="Dexterity" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Constitution" class="form-label">Constitution</label>
                <input asp-for="Constitution" class="form-control mb-3 centered-input" type="number" />
                <span asp-validation-for="Constitution" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Intelligence" class="form-label">Intelligence</label>
                <input asp-for="Intelligence" class="form-control mb-3 centered-input" type="number" />
                <span asp-validation-for="Intelligence" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Wisdom" class="form-label">Wisdom</label>
                <input asp-for="Wisdom" class="form-control mb-3 centered-input" type="number" />
                <span asp-validation-for="Wisdom" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Charisma" class="form-label">Charisma</label>
                <input asp-for="Charisma" class="form-control mb-3 centered-input" type="number" />
                <span asp-validation-for="Charisma" class="text-danger"></span>
            </div>
        </div>



        <!-- SUBMIT BUTTON -->
        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Create your character</button>
        </div>
    </form>
</div>
