								<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
							</div>
							<form asp-controller="UpdateStatistic" asp-action="UpdateStrength" asp-route-id="@Model.CharacterID" method="post">
								@Html.AntiForgeryToken()
								<input type="hidden" name="id" value="@Model.CharacterID" />
								<div class="modal-body">
									<label for="Strength" class="form-label mt-3">Strength</label>
									<input id="Strength" name="strength" class="form-control mb-3" type="number" value="@Model.Strength" />
								</div>
								<div class="modal-footer">
									<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
									<button type="submit" class="btn btn-primary">Update Strength</button>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>

