@model CharacterSheetDnD.ViewModels.MyCharacterViewModel


@{
    ViewData["Title"] = "My Character";
}

<div id="loadingScreen" style="position:fixed; top:0; left:0; width:100%; height:100%; background-color:white; z-index:99;">
    <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
        <p>Loading your character...</p>
        <!-- Example: simple spinner -->
        <div class="loader"></div>
    </div>
</div>

<div style="display:none;" id="characterContent">
    <!-- Your character content goes here -->
    <div class="text-center">
        <h1 class="display-4">My Character</h1>
        <h3>Let the adventure begin</h3>
    </div>
    <p>Character Name : @Model.Name </p>
    <p>Character Dexterity : @Model.Dexterity </p>
</div>









@section Scripts {
    <script>
        window.addEventListener('DOMContentLoaded', (event) => {
            // Simulate loading time, e.g., fetching data. Adjust time as needed.
            setTimeout(function() {
                document.getElementById('loadingScreen').style.display = 'none';
                document.getElementById('characterContent').style.display = 'block';
            }, 2000); // 2000 milliseconds = 2 seconds
        });
    </script>
}

<style>
    .loader {
        border: 16px solid #f3f3f3;
        border-radius: 50%;
        border-top: 16px solid #3498db;
        width: 120px;
        height: 120px;
        -webkit-animation: spin 2s linear infinite; /* Safari */
        animation: spin 2s linear infinite;
    }

    /* Safari */
    -webkit-keyframes spin {
        0% { -webkit-transform: rotate(0deg); }
        100% { -webkit-transform: rotate(360deg); }
    }

    keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }
</style>
